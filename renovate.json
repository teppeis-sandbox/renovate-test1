{
  "extends": [
    "@teppeis:anytime"
  ],
  "npm": {
    "packageRules": [
      {
        "packagePatterns": [
          "*"
        ],
        "semanticCommitType": "chore"
      },
      {
        "depTypeList": [
          "dependencies",
          "peerDependencies"
        ],
        "semanticCommitType": "fix"
      },
      {
        "groupName": "ESLint and Prettier",
        "packageNames": [
          "eslint",
          "eslint-config-*",
          "eslint-plugin-*",
          "prettier"
        ]
      }
    ]
  }
}
